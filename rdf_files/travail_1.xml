<?xml version="1.0"?>
<!DOCTYPE rdf:RDF
	[<!ENTITY xsd "http://www.w3.org/2001/XMLSchema#">]>
<rdf:RDF
	xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
	xmlns:foaf="http://xmlns.com/foaf/0.1/"
	xmlns:exterms="http://www.example.com/terms/"
	xmlns:extypes="http://www.example.com/types/"
	xmlns:classes="http://www.example.com/classes#"
	xmlns:properties="http://www.example.com/properties#"
	xml:base="http://www.example.com/base">

	<extypes:Demigod rdf:ID="Hercule">
		<foaf:name>Hercule</foaf:name>
		<exterms:accomplish rdf:resource="http://www.example.com/base#Tache_1"/>
		<exterms:son_of rdf:resource="http://www.example.com/base#Zeus"/>
		<exterms:son_of rdf:resource="http://www.example.com/base#Alcmène"/>
	</extypes:Demigod>

	<extypes:Task rdf:ID="Tache_1">
		<foaf:name>Tuer le lion de Némée</foaf:name>
		<exterms:requester rdf:resource="http://www.example.com/base#Euristhée"/>
		<exterms:task_reason rdf:resource="http://www.example.com/base#Raison_tache_1"/>
		<exterms:localisation>Némée</exterms:localisation>
		<exterms:task_requirement rdf:resource="http://www.example.com/base#Objectif_tache_1"/>
		<exterms:task_step rdf:resource="http://www.example.com/base#Etape_tache_1"/>
	</extypes:Task>

	<rdf:Description rdf:ID="Raison_tache_1">
		<exterms:reasons_list>
			<rdf:Bag>
				<rdf:li rdf:resource="http://www.example.com/exterms#Crimes_sur_les_villageois"/>
				<rdf:li rdf:resource="http://www.example.com/exterms#Femmes_prises_en_otage"/>
				<rdf:li rdf:resource="http://www.example.com/exterms#Moutons_des_bergers_locaux_mangés"/>
			</rdf:Bag>
		</exterms:reasons_list>
	</rdf:Description>

	<rdf:Description rdf:ID="Objectif_tache_1">
		<exterms:requirements_list>
			<rdf:Bag>
				<rdf:li rdf:resource="http://www.example.com/base#Objectif_tache_1_1"/>
				<rdf:li rdf:resource="http://www.example.com/base#Objectif_tache_1_2"/>
			</rdf:Bag>
		</exterms:requirements_list>
	</rdf:Description>

	<extypes:Kill rdf:ID="Objectif_tache_1_1">
		<exterms:concern rdf:resource="http://www.example.com/base#Lion_de_Némée"/>
	</extypes:Kill>
	<extypes:Rescue rdf:ID="Objectif_tache_1_2">
		<exterms:concern>Les otages</exterms:concern>
	</extypes:Rescue>
	
	<rdf:Description rdf:ID="Etape_tache_1">
		<exterms:step_list>
			<rdf:Bag>
				<rdf:li rdf:resource="http://www.example.com/exterms#AttaqueStandard_Echoue"/>
				<rdf:li rdf:resource="http://www.example.com/exterms#Attaque_mains_nues"/>
				<rdf:li rdf:resource="http://www.example.com/exterms#Etouffement_Lion"/>
				<rdf:li rdf:resource="http://www.example.com/exterms#Extrait_griffe"/>
				<rdf:li rdf:resource="http://www.example.com/exterms#Récupère_Peau"/>
			</rdf:Bag>
		</exterms:step_list>
	</rdf:Description>

</rdf:RDF>